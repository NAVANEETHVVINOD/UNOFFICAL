// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User and Authentication
enum UserRole {
  ADMIN
  STUDENT
  FACULTY
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          UserRole  @default(STUDENT)
  verified      Boolean   @default(false)
  profile       Profile?
  clubMembers   ClubMember[]
  eventAttendees EventAttendee[]
  listings      Listing[]
  messages      Message[]
  materials     StudyMaterial[]
  materialVersions MaterialVersion[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Profile {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  college       String
  year          Int
  major         String
  bio           String?
  avatar        String?
  social        Json?
  interests     String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Clubs Module
enum ClubRole {
  ADMIN
  MODERATOR
  MEMBER
}

model Club {
  id          String    @id @default(cuid())
  name        String
  description String
  cover       String?
  members     ClubMember[]
  events      Event[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ClubMember {
  id          String    @id @default(cuid())
  userId      String
  clubId      String
  role        ClubRole  @default(MEMBER)
  joinedAt    DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  club        Club      @relation(fields: [clubId], references: [id])

  @@unique([userId, clubId])
}

// Events Module
enum RSVPStatus {
  GOING
  MAYBE
  NOT_GOING
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  location    String?
  clubId      String?
  club        Club?     @relation(fields: [clubId], references: [id])
  attendees   EventAttendee[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model EventAttendee {
  id          String    @id @default(cuid())
  userId      String
  eventId     String
  status      RSVPStatus
  user        User      @relation(fields: [userId], references: [id])
  event       Event     @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}

// Marketplace Module
enum Condition {
  NEW
  LIKE_NEW
  GOOD
  FAIR
  POOR
}

enum Category {
  TEXTBOOKS
  ELECTRONICS
  FURNITURE
  SUPPLIES
  OTHER
}

enum ListingStatus {
  ACTIVE
  SOLD
  RESERVED
  DELETED
}

model Listing {
  id          String    @id @default(cuid())
  title       String
  description String
  price       Float
  condition   Condition
  category    Category
  images      String[]
  sellerId    String
  seller      User      @relation(fields: [sellerId], references: [id])
  messages    Message[]
  status      ListingStatus @default(ACTIVE)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Message {
  id          String    @id @default(cuid())
  content     String
  senderId    String
  listingId   String
  sender      User      @relation(fields: [senderId], references: [id])
  listing     Listing   @relation(fields: [listingId], references: [id])
  createdAt   DateTime  @default(now())
}

// Study Materials Module
enum MaterialType {
  NOTES
  ASSIGNMENT
  PAPER
  BOOK
  OTHER
}

model StudyMaterial {
  id          String    @id @default(cuid())
  title       String
  description String
  subject     String
  type        MaterialType
  file        String
  versions    MaterialVersion[]
  uploaderId  String
  uploader    User      @relation(fields: [uploaderId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MaterialVersion {
  id          String    @id @default(cuid())
  version     Int
  file        String
  materialId  String
  material    StudyMaterial @relation(fields: [materialId], references: [id])
  uploaderId  String
  uploader    User      @relation(fields: [uploaderId], references: [id])
  createdAt   DateTime  @default(now())
}
