datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String   // hashed
  role        Role     @default(STUDENT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profile     Profile?
  memberships ClubMember[]
  events      EventParticipant[]
  createdEvents Event[]
  listings    MarketplaceListing[] @relation("ListingOwner")
  notes       Note[]               @relation("AuthorNotes")
  likes       NoteLike[]
}

model Profile {
  id          String  @id @default(cuid())
  userId      String  @unique
  fullName    String
  collegeId   String?
  bio         String?
  avatarUrl   String?
  tags        String[] // JSON array: ["web dev", "volunteering"]
  githubUrl   String?
  instagram   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User    @relation(fields: [userId], references: [id])
  college     College? @relation(fields: [collegeId], references: [id])
}

model College {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  city      String?
  state     String?
  createdAt DateTime @default(now())

  clubs     Club[]
  profiles  Profile[]
  events    Event[]
  listings  MarketplaceListing[]
  notes     Note[]
}

model Club {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  description String?
  collegeId   String
  createdAt   DateTime      @default(now())

  college     College       @relation(fields: [collegeId], references: [id])
  members     ClubMember[]
  events      Event[]
}

model ClubMember {
  id        String   @id @default(cuid())
  userId    String
  clubId    String
  role      ClubRole @default(MEMBER)
  joinedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  club      Club     @relation(fields: [clubId], references: [id])

  @@unique([userId, clubId])
}

model Event {
  id          String              @id @default(cuid())
  title       String
  description String?
  startsAt    DateTime
  endsAt      DateTime
  venue       String?
  clubId      String?
  collegeId   String?
  createdById String

  club        Club?               @relation(fields: [clubId], references: [id])
  college     College?            @relation(fields: [collegeId], references: [id])
  createdBy   User                @relation(fields: [createdById], references: [id])
  participants EventParticipant[]
}

model EventParticipant {
  id       String   @id @default(cuid())
  eventId  String
  userId   String
  status   EventStatus @default(GOING)

  event    Event    @relation(fields: [eventId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@unique([eventId, userId])
}

model MarketplaceListing {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Int      // in rupees
  imageUrl    String?
  ownerId     String
  collegeId   String?
  status      ListingStatus @default(ACTIVE)
  createdAt   DateTime @default(now())

  owner       User     @relation("ListingOwner", fields: [ownerId], references: [id])
  college     College? @relation(fields: [collegeId], references: [id])
}

model Note {
  id          String   @id @default(cuid())
  title       String
  description String?
  fileUrl     String
  subject     String
  semester    Int
  authorId    String
  collegeId   String?
  createdAt   DateTime @default(now())

  author      User     @relation("AuthorNotes", fields: [authorId], references: [id])
  college     College? @relation(fields: [collegeId], references: [id])
  likes       NoteLike[]
}

model NoteLike {
  id     String @id @default(cuid())
  noteId String
  userId String

  note   Note   @relation(fields: [noteId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([noteId, userId])
}

enum Role {
  STUDENT
  MODERATOR
  ADMIN
  SUPERADMIN
}

enum ClubRole {
  MEMBER
  LEAD
  STAFF
}

enum EventStatus {
  GOING
  INTERESTED
  NOT_GOING
}

enum ListingStatus {
  ACTIVE
  SOLD
  HIDDEN
}
